<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineShoppingTracker.Views.WishListPage"
             Title="Wish List">
    <ListView ItemsSource="{Binding WishListProducts}" SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame>
                        <StackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Price}" />
                            <Label Text="{Binding Priority}" />
                            <Label Text="{Binding Stage}" />
                        </StackLayout>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>